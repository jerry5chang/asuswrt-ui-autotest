{
    "manifest_version": 3,
    "name": "ASUSWRT UI Autotest",
    "version": "1.4",
    "description": "Sequentially navigate to ASUSWRT UI pages",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "ASUSWRT UI Autotest"
    },
    "permissions": ["downloads", "tabs", "activeTab", "scripting"],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["content.js"],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["setupLang.js", "setupTesting.js", "endTesting.js", "startTesting.js", "injected-error-handler.js"],
            "matches": ["<all_urls>"]
        }
    ]
}
